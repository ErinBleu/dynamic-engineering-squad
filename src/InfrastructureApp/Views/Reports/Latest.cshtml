@model InfrastructureApp.ViewModels.LatestReportsViewModel

@{
    ViewData["Title"] = "Latest Reports"; 
}

<h1 class="mb-3">Latest Reports</h1>

@if (Model.Reports == null || !Model.Reports.Any())
{
    // If there are no reports, show a message
    <div class="alert alert-info">
        No reported issues yet.
    </div>
}
else
{
    // If reports exist, display them in a list
    <div class="list-group">
        @foreach (var r in Model.Reports)
        {
            // Each loop shows one report item
            <div class="list-group-item d-flex justify-content-between align-items-start">
                <div class="me-3">
                    <div class="fw-bold">@r.Description</div>  
                    <div class="text-muted">Status: @r.Status</div>  
                </div>
                <small class="text-muted">
                    @r.CreatedAt.ToLocalTime().ToString("g")  
                </small>
            </div>
        }
    </div>
}
